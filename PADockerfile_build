FROM perfectlysoft/perfectassistant:latest
# COpenSSL-2.0.2/PADockerfile
RUN apt-get -y update && apt-get install -y libssl-dev

# libmongoc-2.0.1/PADockerfile
RUN apt-get -y update && apt-get install -y libbson-dev libmongoc-dev
RUN ln -s /usr/include/libmongoc-1.0 /usr/local/include/libmongoc-1.0

# LinuxBridge-2.0.2/PADockerfile
RUN apt-get -y update && apt-get install -y uuid-dev
